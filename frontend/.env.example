# Frontend Environment Variables
# Copy this file to .env and update with your actual values


# Payment Gateway Keys (Public Keys Only!)
# Stripe handles Apple Pay and Google Pay automatically - no extra keys needed
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
REACT_APP_PAYPAL_CLIENT_ID=your-paypal-client-id

# API Base URL
REACT_APP_API_BASE_URL=http://localhost:5000/api

# Shop Information
REACT_APP_SHOP_NAME=Your Mobile Shop Name
REACT_APP_CONTACT_EMAIL=support@yourshop.com
REACT_APP_CONTACT_PHONE=+44 123 456 7890